{{!-- Navbar --}}
<div class="nav-home">
  <img src="css/logotech.png" class = "img-home">
  {{#if logged_in}}
  <nav>
    <button class="btn" id="logout">logout</button>
  </nav>
  {{/if}}
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</div>

{{!-- Blog --}}
<h1 class = "newest-posts">Newest Posts</h1>
{{#each blogs as |blog| }}
<div class="blog-container">
  <div class="blog-title">
    <h2><a id = "blog-anc" href="/blog/{{blog.id}}">{{blog.title}}</a></h2>
  </div>
  <div class="blog-description">
    <p>{{blog.description}}</p>
  </div>
  <div class="blog-user">
    <p class = "posted-by">Posted by: {{blog.user.name}}</p>
  </div>
  {{#each blog.comments as |comment| }}
  <p>{{comment.comment}}</p>
  <p>{{comment.user.name}}</p>
  {{/each}}
  <form action="/api/comment/{{blog.id}}" method="POST">
    <input type="text" name="comment" />
    <input type="submit">
  </form>
</div>
</div>
{{/each}}

<div>
  <form action="/api/blog" method="POST">
    <input type="text" name="title" />
    <input type="text" name="description" />
    <input type="submit" />
  </form>
</div>