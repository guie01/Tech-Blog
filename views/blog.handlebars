{{!-- Navbar --}}
  <nav class = "nav-home">
    <div class="nav-wrapper">
      <img src="/css/logotech.png" class = "img-home">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a class = "nav-li" href="/login">Home</a></li>
        <li><a class = "nav-li" href="/create">Create a Post</a></li>
        {{#if logged_in}}
        <li><button class="btn" id="logout">logout</button></li>
        {{/if}}
      </ul>
    </div>
  </nav>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

{{!-- Blog --}}
<h1 class = "newest-posts">Newest Posts</h1>
<div class="blog-container">
  <div class="blog-title">
    <h2><a id = "blog-anc" href="/blog/{{blog.id}}">{{blog.title}}</a></h2>
  </div>
  <div class="blog-description">
    <p>{{blog.description}}</p>
  </div>
  <div class="blog-user">
    <p class = "posted-by">Posted by: {{blog.user.name}}</p>
  </div>
  {{#each blog.comments as |comment| }}
  <p class ="comment-p">{{comment.comment}}</p>
  <p class = "comm-by">Comment by: {{comment.user.name}}</p>
  {{/each}}
  <form action="/api/comment/{{blog.id}}" method="POST">
    <input type="text" name="comment" />
    <input type="submit">
  </form>
</div>
</div>
