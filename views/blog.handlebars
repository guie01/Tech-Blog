<h1 class = "newest-posts">Newest Posts</h1>
<div class="blog-container">
  <div class="blog-title">
    <h2><a id = "blog-anc" href="">{{blog.title}}</a></h2>
  </div>
  <div class="blog-description">
    <p>{{blog.description}}</p>
  </div>
  <div class="blog-user">
    <p class = "posted-by">Posted by: {{blog.user.name}}</p>
  </div>
  {{#each blog.comments as |comment| }}
  <p>{{comment.comment}}</p>
  <p>{{comment.user.name}}</p>
  {{/each}}
  <form action="/api/comment/{{blog.id}}" method="POST">
    <input type="text" name="comment" />
    <input type="submit">
  </form>
</div>
</div>